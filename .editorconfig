# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml,typ}]
indent_size = 2
trim_trailing_whitespace = false

[flake.{lock,nix}]
indent_size = 2

[{Makefile,*.tmTheme,*.bib}]
indent_style = tab

[{COPYING,LICENSE,NOTICE,*.{md,mf,xmp,typ}}]
indent_size = unset
trim_trailing_whitespace = false
